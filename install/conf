#/etc/supervisor/conf.d/data_sync.conf
[program:cluster]
command=/opt/kafka/bin/kafka-server-start.sh /opt/kafka/config/server.properties
directory=/opt/kafka
user=kafka
autostart=true
autorestart=true
stdout_logfile=/var/log/data_sync/cluster.log
stderr_logfile=/var/log/data_sync/cluster.err
stopasgroup=true

[program:sender]
command=java  -cp "/opt/kafka/libs/*:."  Sender
directory=/opt/kafka/class
user=kafka
autostart=true
autorestart=true
stdout_logfile=/var/log/data_sync/sender.log
stderr_logfile=/var/log/data_sync/sender.err
stopasgroup=true

[program:writer]
command=java  -cp "/opt/kafka/libs/*:/usr/share/java/mysql-connector-java.jar:."  Writer
directory=/opt/kafka/class
user=kafka
autostart=true
autorestart=true
stdout_logfile=/var/log/data_sync/writer.log
stderr_logfile=/var/log/data_sync/writer.err
stopasgroup=true
